    <VBox HBox.hgrow="ALWAYS" spacing="0">
        <HBox alignment="CENTER_LEFT" style="-fx-padding: 60 60 30 60;">
            <VBox spacing="8">
                <Label text="Donation Feed" 
                       style="-fx-font-size: 42px; -fx-font-weight: 900; -fx-text-fill: #0F172A; -fx-letter-spacing: -1px;"/>
