<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<VBox spacing="20" alignment="CENTER" prefHeight="700.0" prefWidth="900.0" 
      xmlns:fx="http://javafx.com/fxml/1" fx:controller="Controllers.NGODashboardController">
    <padding><javafx.geometry.Insets top="20" right="20" bottom="20" left="20"/></padding>
    
    <Text text="Available Food Listings" style="-fx-font-size: 24px; -fx-font-weight: bold;" />

    <TableView fx:id="foodTable" VBox.vgrow="ALWAYS">
        <columns>
            <TableColumn fx:id="colFoodName" text="Food Name" prefWidth="200" />
            <TableColumn fx:id="colVendorName" text="Vendor" prefWidth="200" />
            <TableColumn fx:id="colExpiryTime" text="Expiry" prefWidth="150" />
            <TableColumn fx:id="colStatus" text="Status" prefWidth="100" />
        </columns>
    </TableView>

    <Label fx:id="lblRouteSummary" text="Select a listing" />
    
    <HBox spacing="10" alignment="CENTER">
        <Button text="Accept Listing" onAction="#handleAccept" style="-fx-background-color: #2ecc71; -fx-text-fill: white;" />
        <Button text="View Route" onAction="#handleViewRoute" />
        <Button text="Back to Dashboard" onAction="#handleLogout" /> </HBox>
</VBox>