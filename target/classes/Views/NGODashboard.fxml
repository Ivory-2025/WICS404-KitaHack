<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>
<?import javafx.geometry.Insets?>

<VBox alignment="TOP_CENTER" spacing="20.0" prefHeight="700.0" prefWidth="900.0" 
      stylesheets="@../css/style.css" xmlns:fx="http://javafx.com/fxml/1" 
      fx:controller="Controllers.NGODashboardController">
    <padding>
        <Insets top="20" right="20" bottom="20" left="20"/>
    </padding>

    <Text text="NGO Marketplace" styleClass="header-text" />
    <Label fx:id="lblRouteSummary" text="Select a listing to see route info." 
           style="-fx-text-fill: #636e72; -fx-font-style: italic;" />

    <TableView fx:id="foodTable" VBox.vgrow="ALWAYS">
        <columns>
            <TableColumn fx:id="colFoodName" text="Food Item" prefWidth="200" />
            <TableColumn fx:id="colVendorName" text="Vendor" prefWidth="200" />
            <TableColumn fx:id="colExpiryTime" text="Expires At" prefWidth="200" />
            <TableColumn fx:id="colStatus" text="Status" prefWidth="150" />
        </columns>
    </TableView>

    <HBox alignment="CENTER" spacing="20.0">
        <Button fx:id="btnAccept" text="CLAIM FOOD" onAction="#handleAccept" 
                style="-fx-background-color: #4CAF50;"/>
        <Button fx:id="btnViewRoute" text="VIEW ROUTE ON MAP" onAction="#handleViewRoute" />
        <Button text="Logout" onAction="#handleLogout" style="-fx-background-color: #e74c3c;" />
    </HBox>
</VBox>