<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.control.*?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.effect.DropShadow?>

<StackPane fx:controller="Controllers.VendorDashboardController" 
           xmlns="http://javafx.com/javafx/21" 
           xmlns:fx="http://javafx.com/fxml/1"
           prefHeight="750.0" prefWidth="1000.0" 
           style="-fx-background-color: #FAFAFA;">

    <VBox alignment="TOP_CENTER" spacing="50.0">
        <padding>
            <Insets top="80" bottom="60" left="50" right="50"/>
        </padding>

        <VBox alignment="CENTER" spacing="10">
            <Label fx:id="welcomeLabel" text="Welcome back, SavePlate Cafe!" 
                   style="-fx-font-size: 16px; -fx-text-fill: #94A3B8; -fx-font-weight: 600;"/>
            <Label text="Vendor Dashboard" 
                   style="-fx-font-size: 42px; -fx-font-weight: 900; -fx-text-fill: #1E293B; -fx-letter-spacing: -1px;"/>
        </VBox>

        <GridPane alignment="CENTER" hgap="25.0" vgap="25.0">
            <columnConstraints>
                <ColumnConstraints hgrow="NEVER" minWidth="220.0" prefWidth="240.0" />
                <ColumnConstraints hgrow="NEVER" minWidth="220.0" prefWidth="240.0" />
                <ColumnConstraints hgrow="NEVER" minWidth="220.0" prefWidth="240.0" />
            </columnConstraints>
            
            <children>
                <VBox fx:id="uploadCard" onMouseClicked="#handleUploadFoodSurplus" 
                      GridPane.columnIndex="0" GridPane.rowIndex="0"
                      alignment="CENTER" spacing="20.0" styleClass="dashboard-card"
                      style="-fx-background-color: white; -fx-padding: 35; -fx-background-radius: 30; -fx-cursor: hand;">
                    <effect><DropShadow color="#0000000D" radius="30" offsetY="15"/></effect>
                    <Label mouseTransparent="true" text="â¬†" style="-fx-font-size: 40px; -fx-text-fill: #1E293B;"/>
                    <Label mouseTransparent="true" text="Upload Surplus" style="-fx-font-size: 17px; -fx-font-weight: 800;"/>
                </VBox>

                <VBox fx:id="ordersCard" onMouseClicked="#handleViewOrders" 
                      GridPane.columnIndex="1" GridPane.rowIndex="0"
                      alignment="CENTER" spacing="20.0"
                      style="-fx-background-color: white; -fx-padding: 35; -fx-background-radius: 30; -fx-cursor: hand;">
                    <effect><DropShadow color="#0000000D" radius="30" offsetY="15"/></effect>
                    <Label mouseTransparent="true" text="ðŸ“‹" style="-fx-font-size: 40px;"/>
                    <Label mouseTransparent="true" text="View Orders" style="-fx-font-size: 17px; -fx-font-weight: 800;"/>
                </VBox>

                <VBox fx:id="analyticsCard" onMouseClicked="#handleGoToAnalytics" 
                      GridPane.columnIndex="2" GridPane.rowIndex="0"
                      alignment="CENTER" spacing="20.0"
                      style="-fx-background-color: white; -fx-padding: 35; -fx-background-radius: 30; -fx-cursor: hand;">
                    <effect><DropShadow color="#0000000D" radius="30" offsetY="15"/></effect>
                    <Label mouseTransparent="true" text="ðŸ“Š" style="-fx-font-size: 40px;"/>
                    <Label mouseTransparent="true" text="Weekly Analysis" style="-fx-font-size: 17px; -fx-font-weight: 800;"/>
                </VBox>

                <VBox fx:id="chatCard" onMouseClicked="#handleGoToChats" 
                      GridPane.columnIndex="0" GridPane.rowIndex="1"
                      alignment="CENTER" spacing="20.0"
                      style="-fx-background-color: white; -fx-padding: 35; -fx-background-radius: 30; -fx-cursor: hand;">
                    <effect><DropShadow color="#0000000D" radius="30" offsetY="15"/></effect>
                    <Label mouseTransparent="true" text="ðŸ’¬" style="-fx-font-size: 40px;"/>
                    <Label mouseTransparent="true" text="Messages" style="-fx-font-size: 17px; -fx-font-weight: 800;"/>
                </VBox>

                <VBox fx:id="manageSalesCard" onMouseClicked="#handleGoToManageSales" 
                      GridPane.columnIndex="1" GridPane.rowIndex="1"
                      alignment="CENTER" spacing="20.0"
                      style="-fx-background-color: white; -fx-padding: 35; -fx-background-radius: 30; -fx-cursor: hand;">
                    <effect><DropShadow color="#0000000D" radius="30" offsetY="15"/></effect>
                    <Label mouseTransparent="true" text="ðŸ’°" style="-fx-font-size: 40px;"/>
                    <Label mouseTransparent="true" text="Manage Sales" style="-fx-font-size: 17px; -fx-font-weight: 800;"/>
                </VBox>
            </children>
        </GridPane>

        <Region VBox.vgrow="ALWAYS" />

        <Button text="Sign Out" onAction="#handleLogout" 
                style="-fx-text-fill: #94A3B8; -fx-font-weight: 800; -fx-background-color: transparent; -fx-cursor: hand; -fx-font-size: 13px; -fx-letter-spacing: 1px;"/>
    </VBox>
</StackPane>