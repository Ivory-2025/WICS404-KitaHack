            <children>
                <VBox fx:id="uploadCard" onMouseClicked="#handleUploadFoodSurplus" 
                      GridPane.columnIndex="0" GridPane.rowIndex="0"
                      alignment="CENTER_LEFT" spacing="15.0"
                      style="-fx-background-color: white; -fx-padding: 30; -fx-background-radius: 25; -fx-cursor: hand;">
