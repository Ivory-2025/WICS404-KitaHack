<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.control.*?>
<?import javafx.geometry.Insets?>

<StackPane fx:controller="Controllers.VendorDashboardController" 
           xmlns="http://javafx.com/javafx/8" 
           xmlns:fx="http://javafx.com/fxml/1"
           prefHeight="750.0" prefWidth="1000.0" 
           style="-fx-background-color: #FFFFFF;">

    <VBox alignment="TOP_CENTER" spacing="40.0">
        <padding>
            <Insets top="80" bottom="60" left="50" right="50"/>
        </padding>

        <VBox alignment="CENTER" spacing="10">
            <Label fx:id="welcomeLabel" text="Welcome back, SavePlate Cafe!" 
                   style="-fx-font-size: 16px; -fx-text-fill: #94A3B8; -fx-font-weight: 600;"/>
            <Label text="Vendor Dashboard" 
                   style="-fx-font-size: 42px; -fx-font-weight: 900; -fx-text-fill: #1E293B; -fx-letter-spacing: -1px;"/>
        </VBox>

        <GridPane alignment="CENTER" hgap="30.0" vgap="30.0">
            <columnConstraints>
                <ColumnConstraints hgrow="NEVER" minWidth="250.0" prefWidth="280.0" />
                <ColumnConstraints hgrow="NEVER" minWidth="250.0" prefWidth="280.0" />
            </columnConstraints>
            
            <children>
                <VBox fx:id="uploadCard" onMouseClicked="#handleUploadFoodSurplus" 
                      GridPane.columnIndex="0" GridPane.rowIndex="0"
                      alignment="CENTER" spacing="15.0" styleClass="dashboard-card"
                      style="-fx-background-color: white; -fx-padding: 40; -fx-background-radius: 25; -fx-effect: dropshadow(three-pass-box, rgba(0,0,0,0.05), 15, 0, 0, 5); -fx-cursor: hand;">
                    <Label text="â¬†" style="-fx-font-size: 40px; -fx-text-fill: #1E293B;"/>
                    <Label text="Upload Surplus" style="-fx-font-size: 18px; -fx-font-weight: 800;"/>
                </VBox>

                <VBox fx:id="ordersCard" onMouseClicked="#handleViewOrders" 
                      GridPane.columnIndex="1" GridPane.rowIndex="0"
                      alignment="CENTER" spacing="15.0"
                      style="-fx-background-color: white; -fx-padding: 40; -fx-background-radius: 25; -fx-effect: dropshadow(three-pass-box, rgba(0,0,0,0.05), 15, 0, 0, 5); -fx-cursor: hand;">
                    <Label text="ðŸ“‹" style="-fx-font-size: 40px;"/>
                    <Label text="View Orders" style="-fx-font-size: 18px; -fx-font-weight: 800;"/>
                </VBox>

                <VBox fx:id="chatCard" onMouseClicked="#handleGoToChats" 
                      GridPane.columnIndex="0" GridPane.rowIndex="1"
                      alignment="CENTER" spacing="15.0"
                      style="-fx-background-color: white; -fx-padding: 40; -fx-background-radius: 25; -fx-effect: dropshadow(three-pass-box, rgba(0,0,0,0.05), 15, 0, 0, 5); -fx-cursor: hand;">
                    <Label text="ðŸ’¬" style="-fx-font-size: 40px;"/>
                    <Label text="Messages" style="-fx-font-size: 18px; -fx-font-weight: 800;"/>
                </VBox>

                <VBox fx:id="manageSalesCard" onMouseClicked="#handleGoToManageSales" 
                      GridPane.columnIndex="1" GridPane.rowIndex="1"
                      alignment="CENTER" spacing="15.0"
                      style="-fx-background-color: white; -fx-padding: 40; -fx-background-radius: 25; -fx-effect: dropshadow(three-pass-box, rgba(0,0,0,0.05), 15, 0, 0, 5); -fx-cursor: hand;">
                    <Label text="ðŸ’°" style="-fx-font-size: 40px;"/>
                    <Label text="Manage Sales" style="-fx-font-size: 18px; -fx-font-weight: 800;"/>
                </VBox>
            </children>
        </GridPane>

        <Region VBox.vgrow="ALWAYS" />

        <Button text="Sign Out" onAction="#handleLogout" 
                style="-fx-text-fill: #94A3B8; -fx-font-weight: 800; -fx-background-color: transparent; -fx-cursor: hand; -fx-font-size: 13px; -fx-letter-spacing: 1px;"/>
    </VBox>
</StackPane>