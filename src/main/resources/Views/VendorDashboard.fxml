<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<VBox alignment="CENTER" spacing="20.0" prefHeight="600.0" prefWidth="800.0" 
      stylesheets="@../css/style.css" xmlns:fx="http://javafx.com/fxml/1" 
      fx:controller="Controllers.VendorDashboardController">
    <children>
        <Text text="Vendor Dashboard" styleClass="header-text" />
        <Label fx:id="welcomeLabel" text="Welcome back, Vendor!" style="-fx-font-size: 18px;" />
        
        <HBox alignment="CENTER" spacing="15.0">
            <Button text="Upload Food Surplus" prefWidth="200.0" style="-fx-background-color: #4CAF50;"/>
            <Button text="View Orders" prefWidth="200.0" />
        </HBox>
        
        <Button text="Logout" onAction="#handleLogout" style="-fx-background-color: #e74c3c;" />
    </children>
</VBox>